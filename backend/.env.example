# backend/.env.example
# Database
DATABASE_URL=postgresql://bugflow:bugflow_password@localhost/bugflow_dev
DATABASE_TEST_URL=postgresql://bugflow:bugflow_password@localhost/bugflow_test

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
APP_NAME=BugFlow
APP_VERSION=0.1.0
DEBUG=True
ENVIRONMENT=development
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# File Storage
STORAGE_TYPE=local  # local, s3, minio
STORAGE_BUCKET=attachments
STORAGE_LOCAL_PATH=./uploads
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_ENDPOINT_URL=http://localhost:9000
AWS_REGION=us-east-1

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@bugflow.local

# Security
PASSWORD_RESET_TOKEN_EXPIRE_HOURS=24
INVITATION_TOKEN_EXPIRE_DAYS=7
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=image/*,application/pdf,text/plain,application/zip

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_MULTIPROC_DIR=/tmp/prometheus